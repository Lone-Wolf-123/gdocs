{
  "compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@shared/*": ["src/*"]
		},
		"target": "ES2020",
		"module": "NodeNext",
		"declaration": true,
		"outDir": "dist",
		"moduleResolution": "NodeNext",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true
	},
  "include": ["src"]
}

